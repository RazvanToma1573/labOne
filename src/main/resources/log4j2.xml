<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <Property name="filename">./log/catalog.log</Property>
        <Property name="filenamePattern">log/catalog-%i.log</Property>
        <Property name="pattern">%d{ISO8601} %-5p [%t]: %-36.36c{1} - %m %n
        </Property>
        <property name="show_sql">false</property>
        <property name="format_sql">false</property>
        <property name="generate_statistics">false</property>
        <property name="use_sql_comments">false</property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${pattern}"/>
        </Console>
        <RollingFile name="File" fileName="${filename}"
                     filePattern="${filenamePattern}">
            <PatternLayout pattern="${pattern}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>

        <!-- Spring framework -->
        <Logger name="org.hibernate.stat" level="INFO" />
        <Logger name="org.springframework.data" level="WARN"/>
        <Logger name="org.springframework.web" level="WARN"/>
        <Logger name="org.springframework.http.converter.json" level="WARN"/>
        <Logger name="com.fasterxml.jackson.databind" level="WARN"/>
        <Logger name="ro.mpp.spring" level="TRACE"/>
        <!-- ROOT -->
        <Root level="WARN">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>

    </Loggers>
</Configuration>

